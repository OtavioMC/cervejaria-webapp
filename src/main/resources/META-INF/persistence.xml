<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="meuPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- ========================================== -->
        <!-- CLASSES BASE -->
        <!-- ========================================== -->
        <class>br.cefetrj.model.Entidade</class>
        <class>br.cefetrj.model.Pessoa</class>

        <!-- ========================================== -->
        <!-- SISTEMA DE CERVEJARIA (PRINCIPAIS) -->
        <!-- ========================================== -->
        <class>br.cefetrj.model.Produto</class>
        <class>br.cefetrj.model.Garcom</class>
        <class>br.cefetrj.model.Caixa</class>
        <class>br.cefetrj.model.Pedido</class>
        <class>br.cefetrj.model.ItemPedido</class>

        <!-- ========================================== -->
        <!-- SISTEMA DE USUÁRIOS E AUTENTICAÇÃO -->
        <!-- ========================================== -->
        <class>br.cefetrj.model.Usuario</class>


        <properties>
            <!-- ========================================== -->
            <!-- CONFIGURAÇÃO DE CONEXÃO MySQL -->
            <!-- ========================================== -->
            <property name="jakarta.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver"/>

            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3307/aula202502?useSSL=false&amp;serverTimezone=America/Sao_Paulo&amp;createDatabaseIfNotExist=true&amp;allowPublicKeyRetrieval=true"/>

            <property name="jakarta.persistence.jdbc.user"
                      value="root"/>

            <property name="jakarta.persistence.jdbc.password"
                      value="root"/>

            <!-- ========================================== -->
            <!-- CONFIGURAÇÕES DO HIBERNATE -->
            <!-- ========================================== -->

            <!-- Dialeto MySQL 8 -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MySQLDialect"/>

            <!-- Estratégia de criação/atualização do schema
                 - create: Apaga e recria as tabelas a cada execução
                 - create-drop: Cria no início e apaga no fim
                 - update: Atualiza o schema conforme necessário (RECOMENDADO)
                 - validate: Apenas valida se o schema está correto
                 - none: Não faz nada
            -->
            <property name="hibernate.hbm2ddl.auto"
                      value="update"/>

            <!-- Mostrar SQL gerado no console (útil para debug) -->
            <property name="hibernate.show_sql"
                      value="true"/>

            <!-- Formatar SQL para melhor legibilidade -->
            <property name="hibernate.format_sql"
                      value="true"/>

            <!-- Adicionar comentários no SQL -->
            <property name="hibernate.use_sql_comments"
                      value="true"/>

            <!-- Configurações de Performance -->
            <property name="hibernate.connection.pool_size"
                      value="10"/>

            <!-- Habilitar cache de segundo nível (opcional) -->
            <!-- <property name="hibernate.cache.use_second_level_cache"
                      value="true"/> -->

            <!-- Estratégia de geração de ID -->
            <property name="hibernate.id.new_generator_mappings"
                      value="true"/>

            <!-- Encoding UTF-8 -->
            <property name="hibernate.connection.characterEncoding"
                      value="utf8"/>
            <property name="hibernate.connection.useUnicode"
                      value="true"/>

            <!-- Log de estatísticas (opcional - desative em produção) -->
            <!-- <property name="hibernate.generate_statistics"
                      value="true"/> -->
        </properties>
    </persistence-unit>
</persistence>